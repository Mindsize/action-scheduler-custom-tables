<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
				 backupStaticAttributes="false"
				 colors="true"
				 convertErrorsToExceptions="true"
				 convertNoticesToExceptions="true"
				 convertWarningsToExceptions="true"
				 processIsolation="false"
				 stopOnFailure="false"
				 syntaxCheck="false"
				 bootstrap="bootstrap.php"
		>
	<testsuites>
		<testsuite name="Action Scheduler Custom Tables">
			<directory>./phpunit</directory>
		</testsuite>
		<testsuite name="Action Scheduler Core">
			<!-- runs the entire core test suite, but with this plugin active -->
			<directory>../../action-scheduler/tests/phpunit</directory>
			<!-- wpPostStore will fail due to unregistered taxonomy -->
			<exclude>../../action-scheduler/tests/phpunit/jobstore</exclude>
		</testsuite>
	</testsuites>
	<groups>
		<exclude>
			<group>ignore</group>
		</exclude>
	</groups>
	<filter>
		<whitelist processsUncoveredFilesFromWhitelist="true">
			<directory suffix=".php">..</directory>
			<exclude>
				<directory>.</directory>
			</exclude>
		</whitelist>
	</filter>
</phpunit>